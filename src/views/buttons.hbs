              <li class="mb-3">
                <button type="button" class="btn btn-primary">
                  Button icon right
                  <i class="zmdi zmdi-star ml-1 icon" aria-hidden="true"></i>
                </button>
              </li>
              <li class="mb-3">
                <button type="button" class="btn btn-primary btn-fab">
                  <i class="zmdi zmdi-thumb-up icon icon-md" aria-hidden="true"></i>
                  <span class="sr-only">Thumbs up</span>
                </button>
              </li>
              <li>
                <button type="button" class="btn btn-primary btn-block">Button block</button>
              </li>
            </ul>
          </div> <!-- end of card-body -->
        </div> <!-- end of card -->
