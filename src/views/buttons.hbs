              <li class="mb-3">
                <button type="button" class="btn btn-primary">Button normal</button>
              </li>
              <li class="mb-3">
                <button type="button" class="btn btn-outline-primary">Button outline</button>
              </li>
              <li class="mb-3">
                <button type="button" class="btn btn-text btn-primary">Button text</button>
              </li>
              <li class="mb-3">
